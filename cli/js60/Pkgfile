# Depends on: autoconf2-13 icu libffi nspr python2 zip

description="JS is Mozilla's JavaScript engine written in C."
url="https://people.mozilla.org"
packager="tnut <tnut@nutyx.org>"

name=js60
version=60.1.0
release=1
source=(http://ftp.gnome.org/pub/gnome/teams/releng/tarballs-needing-help/mozjs/mozjs-60.1.0.tar.bz2)

build() {
  cd mozjs-$version
  export SHELL=/bin/bash
  mkdir mozjs-build
  cd    mozjs-build

  ../js/src/configure --prefix=/usr  \
              --with-intl-api     \
              --with-system-zlib  \
              --with-system-nspr  \
              --with-system-icu   \
              --disable-jemalloc  \
              --enable-readline   \
              --enable-debug
  make
  make DESTDIR=$PKG install
  # Already present on js38
  rm $PKG/usr/lib/libjs_static.ajs
}
